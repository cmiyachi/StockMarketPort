<?xml version="1.0" encoding="UTF-8"?>
<project name="stockmarketport" default="all">
  
  
  <property file="build2.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.junit-4.11-snapshot-20120416-1530.classpath">
    <pathelement location="${basedir}/lib/junit-4.11-SNAPSHOT-20120416-1530.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module StockMarketPort -->
  
  <dirname property="module.stockmarketport.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.stockmarketport" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.stockmarketport" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.stockmarketport" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.stockmarketport" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="stockmarketport.output.dir" value="${module.stockmarketport.basedir}/out/production/StockMarketPort"/>
  <property name="stockmarketport.testoutput.dir" value="${module.stockmarketport.basedir}/out/test/StockMarketPort"/>
  
  <path id="stockmarketport.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="stockmarketport.module.production.classpath">
    <path refid="${module.jdk.classpath.stockmarketport}"/>
    <path refid="library.junit-4.11-snapshot-20120416-1530.classpath"/>
  </path>
  
  <path id="stockmarketport.runtime.production.module.classpath">
    <pathelement location="${stockmarketport.output.dir}"/>
    <path refid="library.junit-4.11-snapshot-20120416-1530.classpath"/>
  </path>
  
  <path id="stockmarketport.module.classpath">
    <path refid="${module.jdk.classpath.stockmarketport}"/>
    <pathelement location="${stockmarketport.output.dir}"/>
    <path refid="library.junit-4.11-snapshot-20120416-1530.classpath"/>
  </path>
  
  <path id="stockmarketport.runtime.module.classpath">
    <pathelement location="${stockmarketport.testoutput.dir}"/>
    <pathelement location="${stockmarketport.output.dir}"/>
    <path refid="library.junit-4.11-snapshot-20120416-1530.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.stockmarketport">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.stockmarketport">
    <patternset refid="excluded.from.module.stockmarketport"/>
  </patternset>
  
  <path id="stockmarketport.module.sourcepath">
    <dirset dir="${module.stockmarketport.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.stockmarketport" depends="compile.module.stockmarketport.production,compile.module.stockmarketport.tests" description="Compile module StockMarketPort"/>
  
  <target name="compile.module.stockmarketport.production" depends="register.custom.compilers" description="Compile module StockMarketPort; production classes">
    <mkdir dir="${stockmarketport.output.dir}"/>
    <javac2 destdir="${stockmarketport.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.stockmarketport}/javac">
      <compilerarg line="${compiler.args.stockmarketport}"/>
      <bootclasspath refid="stockmarketport.module.bootclasspath"/>
      <classpath refid="stockmarketport.module.production.classpath"/>
      <src refid="stockmarketport.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.stockmarketport"/>
    </javac2>
    
    <copy todir="${stockmarketport.output.dir}">
      <fileset dir="${module.stockmarketport.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.stockmarketport.tests" depends="register.custom.compilers,compile.module.stockmarketport.production" description="compile module StockMarketPort; test classes" unless="skip.tests"/>
  
  <target name="clean.module.stockmarketport" description="cleanup module">
    <delete dir="${stockmarketport.output.dir}"/>
    <delete dir="${stockmarketport.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.stockmarketport" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.stockmarketport" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>